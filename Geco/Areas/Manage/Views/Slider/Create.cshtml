@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <!-- Title and Top Buttons Start -->
    <div class="page-title-container">
        <div class="row g-0">
            <!-- Title Start -->
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <a href="#" class="muted-link pb-1 d-inline-block breadcrumb-back">
                        <i data-cs-icon="chevron-left" data-cs-size="13"></i>
                        <span class="text-small align-middle">Sliders</span>
                    </a>
                    <h1 class="mb-0 pb-0 display-4" id="title">Slider Create</h1>
                </div>
            </div>
            <!-- Title End -->
        </div>
    </div>
    <!-- Title and Top Buttons End -->

    <div class="row">
        <div class="col-xl-12">
            <!-- Product Info Start -->
            <div class="mb-5">
                <div class="card">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span class="text-primary" asp-validation-for="Title"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Photo" class="form-label"></label>
                                <input asp-for="Photo" class="form-control" accept="image/*" />
                                <span class="text-primary" asp-validation-for="Photo"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DiscountPercent" class="form-label"></label>
                                <input asp-for="DiscountPercent" class="form-control"/>
                            </div>
                            <div class="mb-3">
                                <input type="submit" class="btn bg-primary" value="Create" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Product Info End -->
        </div>
    </div>
</div>  

